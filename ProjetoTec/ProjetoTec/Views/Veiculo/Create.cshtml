@model ProjetoTec.Models.Dtos.VeiculoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Veículos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="Montadora" class="control-label"></label>
                <input asp-for="Montadora" class="form-control" />
                <span asp-validation-for="Montadora" class="text-danger"></span>
                </div>*@

            <div class="form-group">
                <label asp-for="Montadora" class="control-label"></label>
                @Html.DropDownListFor( model => model.Montadora,(IEnumerable<SelectListItem>)ViewBag.Montadoras, "Selecione a Montadora")
                <span asp-validation-for="Montadora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-controller="Veiculo" asp-action="List" role="button">Voltar</a>
</div>

