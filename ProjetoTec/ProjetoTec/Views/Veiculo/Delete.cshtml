@model Biblioteca.Models.Dtos.VeiculoDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Veículo</h1>

<h3>Tem certeza que deseja excluir este veículo?</h3>
<div>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Montadora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Montadora)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class = "btn btn-secondary" asp-controller = "Veiculo" asp-action = "List" role = "button">Voltar</a>
    </form>
</div>
