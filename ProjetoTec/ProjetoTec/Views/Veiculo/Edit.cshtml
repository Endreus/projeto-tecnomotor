@model Biblioteca.Models.Dtos.VeiculoDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Veículo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Montadora" class="control-label"></label>
                <input asp-for="Montadora" class="form-control" />
                <span asp-validation-for="Montadora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class = "btn btn-secondary" asp-controller = "Veiculo" asp-action = "List" role = "button">Voltar</a>
</div>

